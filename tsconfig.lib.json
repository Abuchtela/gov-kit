{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "noEmit": false,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "allowJs": true,
    "module": "ESNext"
  },
  "include": ["lib"],
  "exclude": ["node_modules", "**/node_modules/*", "dist"]
}
